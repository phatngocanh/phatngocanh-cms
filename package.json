{
    "name": "template",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint:style": "stylelint --config=.stylelintrc.json --output-file=.tmp/stylelint_report.json 'src/**/*.{scss,css}'",
        "lint:js": "next lint --output-file .tmp/eslint_report.json",
        "lint": "pnpm lint:js && pnpm lint:style",
        "tslint": "tsc --noEmit",
        "format:check": "prettier --check \"**/*.{ts,tsx,md,json,yaml,js,jsx}\"",
        "format": "prettier --write \"**/*.{ts,tsx,md,json,yaml,js,jsx}\"",
        "validate": "pnpm run format:check && pnpm run tslint && pnpm run lint",
        "autofix": "eslint . --fix"
    },
    "dependencies": {
        "autoprefixer": "^10.4.20",
        "next": "15.0.1",
        "react": "^18",
        "react-dom": "^18",
        "react-icon": "^1.0.0",
        "react-icons": "^5.3.0",
        "sharp": "^0.33.5"
    },
    "devDependencies": {
        "@eslint/compat": "^1.2.1",
        "@fourdigit/stylelint-config-fourdigit": "^4.0.0",
        "@types/lodash": "^4.17.12",
        "@types/node": "22.7.9",
        "@types/react": "18.3.12",
        "@types/react-dom": "18.3.1",
        "@types/react-redux": "^7.1.34",
        "@types/react-test-renderer": "^18.3.0",
        "@typescript-eslint/eslint-plugin": "^8.11.0",
